<style type="text/css">
.filter_wrap {
	display: -webkit-box;
	position: relative;
	width: 100%;
	border-top: 1px solid #d7d7d7;
	border-bottom: 1px solid #d7d7d7;
	overflow: hidden;
	background: #fff;
	z-index: 20;
	clear: both;
	height: 3em;
    line-height: 3em;
	top:0;
}

.filter_item {
	position: relative;
	-webkit-box-flex: 1;
	font-size: 1.4rem;
	text-align: center;
	color: #797979;
	cursor: pointer;
}

.filter_item~.filter_item:before {
	content: '|';
	position: absolute;
	left: 0;
	color: #797979;
}

.pop {
